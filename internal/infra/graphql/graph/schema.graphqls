type Order {
    id: String!
    Price: Float!
    Tax: Float!
    FinalPrice: Float!
}

input OrderInput {
    Price: Float!
    Tax: Float!
}

input UpdateOrderInput {
    id: String!
    Price: Float!
    Tax: Float!
}

type Query {
    ListOrders: [Order]
    getOrderByID(id: String!): Order
}

type Mutation {
    createOrder(input: OrderInput): Order
    updateOrder(input: UpdateOrderInput): Order
}